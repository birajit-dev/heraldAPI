   <!--=================================
    Inner Header -->
    <section class="inner-header">
      <div class="container">
        <div class="row ">
          <div class="col-md-12">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/"><i class="fas fa-home me-1"></i>News</a></li>
              <li class="breadcrumb-item active"><i class="fa-solid fa-chevron-right me-2"></i><span>{{singlenews.post_name}}</span></li>
            </ol>
          </div>
        </div>
      </div>
    </section>
    <!--=================================
    Inner Header -->

    <!--=================================
    Blog -->
    <section class="space-ptb">
      <div class="container" style="max-width: 1130px;">
        <div class="row">
          <div class="col-lg-7 col-xl-8 blog-single">
            <div class="blog-post-info">
              <div class="blog-content pb-0">
               
                <div class="blog-post-title">
                  <h3 class="mb-0"><a href="#">{{singlenews.post_name}}</a></h3>
                </div>
                <div class="blog-post post-style-07 border-0 py-4 px-0">
                  <div class="blog-post-details">
                    <div class="blog-post-meta p-0">
                      <div class="blog-post-user">
                        <a href="#">By 
                          
                          {{#ifEquals singlenews.post_category "article"}}
                              {{else}}
                              {{singlenews.author}}

                          {{/ifEquals}}

                          </a>
                      </div>
                      <div class="blog-post-time">
                        <a href="#"><i class="fa-solid fa-calendar-days"></i>{{substr "16" singlenews.update_date}}</a>
                      </div>
                    </div>
                  </div>
                </div>
                 <div class="blog-post-image mb-4">
                  <img class="img-fluid" src="{{singlenews.post_image}}" alt="">
                </div>
                
                <div class="singlenews" style="text-align: justify;">
                        {{{singlenews.post_summary}}}
                        {{{singlenews.post_content}}}
                </div>                
                
                
                
                
                
                
                <div class="bg-white mb-4 mt-4">
                  <h6 class="widget-title text-uppercase fw-bolder">Leave a Reply</h6>
                  <div class="blog-sidebar-post-divider mb-4">
                  </div>
                  <form class="row">
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Email">
                    </div>
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Web">
                    </div>
                    <div class="col-lg-12 mb-3">
                      <textarea class="form-control" rows="3" placeholder="Comment"></textarea>
                    </div>
                    <div class="col-lg-12 mb-3">
                      <a class="btn btn-primary" href="#">Post comment</a>
                    </div>
                  </form>
                </div>
                
              </div>
            </div>
          </div>
          <div class="col-lg-5 col-xl-4">
            <div class="sidebar mt-lg-0">
              <div class="widget post-widget">
              <h6 class="widget-title">Related Post</h6>
              <div class="news-tab">

                <div class="tab-content" id="pills-tabContent03">
                  <div class="tab-pane fade show active" id="pills-latest" role="tabpanel" aria-labelledby="pills-latest-tab" tabindex="0">

                    {{#each relatedNews}}
                    <div class="blog-post post-style-04">
                      <div class="blog-image" style="width: 20%;"> <img class="img-fluid" src="{{post_image}}" style="" alt=""> </div>
                      <div class="blog-post-details">
                        <h6 class="blog-title" style="font-size: 15px;"><a href="/{{post_category}}/{{post_url}}">{{substr "40" post_name}}</a></h6>
                        <div class="blog-post-meta">
                          <div class="blog-post-time"> <a href="#"><i class="fa-solid fa-calendar-days"></i>Jan 12 2022</a> </div>
                        </div>
                      </div>
                    </div>
                    {{/each}}

                    
                  </div>
                  
                </div>
              </div>
            </div>
              
              <div class="widget">
                <h6 class="widget-title">Newsletter</h6>
                <div class="newsletter">
                  <i class="fa-solid fa-envelope-open-text"></i>
                  <p>Subscribe For Northeast Herald News And Receive Daily Updates</p>
                  <div class="newsletter-box">
                    <input type="email" class="form-control" placeholder="E-Mail Address">
                  <button type="submit" class="btn btn-primary">Subscribe Now</button>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </section>
